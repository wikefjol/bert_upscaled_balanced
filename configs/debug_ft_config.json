{
    "DATA_FILE": "unite_reps.fasta",
    "PROJECT_NAME": "gold_standard_ft",
    "small_set": true,
    "n_test": 1000,
    "alphabet": [
        "A",
        "C",
        "G",
        "T"
    ],
    "max_sequence_length": 200,
    "target_labels": [
        "species"
    ],
    "model": {
        "num_layers": 2,
        "num_attention_heads": 4,
        "hidden_size": 128,
        "intermediate_size": 512,
        "dropout_rate": 0.05,
        "mlm_dropout_rate": 0.1
    },
    "preprocessing": {
        "tokenization": {
            "strategy": "kmer",
            "k": 4,
            "overlapping": false
        },
        "padding": {
            "strategy": "end"
        },
        "truncation": {
            "strategy": "slidingwindow"
        },
        "augmentation": {
            "training": {
                "strategy": "base",
                "modification_probability": 0.05
            },
            "evaluation": {
                "strategy": "identity"
            }
        }
    },
    "max_epochs": {
        "fine_tuning": 20
    },
    "patience": {
        "fine_tuning": 10
    },
    "peak_lr": 0.005,
    "warmup_epochs": 1,
    "plateau_epochs": 3,
    "decay_epochs": 3,
    "accumulation_steps": 1,
    "batch_size": 10240,
    "test_size": 0.1,
    "system_log_lvl": 20
}